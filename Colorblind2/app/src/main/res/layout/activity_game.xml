<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:weightSum="1">

			<TextView
				android:id="@+id/antiCampTime"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="20:13"
				android:textColor="@color/textPrimary"
				android:textSize="30dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="33dp"
				android:gravity="center|top"
				android:text="ANTICAMP"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="90dp"
			android:layout_height="match_parent"
			android:background="@color/colorTeamRed"
			android:orientation="vertical">

			<TextView
				android:id="@+id/pointsTeamRed"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="142"
				android:textColor="@color/textPrimary"
				android:textSize="30dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:gravity="center|top"
				android:text="POINTS"
				android:textColor="@color/textPrimary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="150dp"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/gameTime"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="12:42"
				android:textColor="@color/textPrimary"
				android:textSize="40dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="27dp"
				android:gravity="center|top"
				android:text="ANTICAMP"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="90dp"
			android:layout_height="match_parent"
			android:background="@color/colorTeamBlue"
			android:orientation="vertical">

			<TextView
				android:id="@+id/pointsTeamBlue"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="142"
				android:textColor="@color/textPrimary"
				android:textSize="30dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:gravity="center|top"
				android:text="POINTS"
				android:textColor="@color/textPrimary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@id/antiCampTime"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="20:13"
				android:textColor="@color/textPrimary"
				android:textSize="30dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="33dp"
				android:gravity="center|top"
				android:text="ANTICAMP"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Open Map"
			android:id="@+id/openMap"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="RedTeam"
			android:id="@+id/RedTeam"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="BlueTeam"
			android:id="@+id/BlueTeam"/>

		<CheckBox
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ready"
			android:id="@+id/ready"/>
	</LinearLayout>
</LinearLayout>