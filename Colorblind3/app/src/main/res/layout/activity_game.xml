<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:weightSum="1">

			<TextView
				android:id="@+id/antiCampTime"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="20:13"
				android:textColor="@color/textPrimary"
				android:textSize="30dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="33dp"
				android:gravity="center|top"
				android:text="ANTICAMP"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="90dp"
			android:layout_height="match_parent"
			android:background="@color/colorTeamRed"
			android:orientation="vertical">

			<TextView
				android:id="@+id/pointsTeamRed"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="142"
				android:textColor="@color/textPrimary"
				android:textSize="30dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:gravity="center|top"
				android:text="POINTS"
				android:textColor="@color/textPrimary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="150dp"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/gameTime"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="12:42"
				android:textColor="@color/textPrimary"
				android:textSize="40dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="27dp"
				android:gravity="center|top"
				android:text="GAME TIME"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="90dp"
			android:layout_height="match_parent"
			android:background="@color/colorTeamBlue"
			android:orientation="vertical">

			<TextView
				android:id="@+id/pointsTeamBlue"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="142"
				android:textColor="@color/textPrimary"
				android:textSize="30dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:gravity="center|top"
				android:text="POINTS"
				android:textColor="@color/textPrimary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@id/antiCampTime"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="20:13"
				android:textColor="@color/textPrimary"
				android:textSize="30dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="33dp"
				android:gravity="center|top"
				android:text="ANTICAMP"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal"
		android:weightSum="1">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.15"
			android:orientation="vertical">

			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_gravity="center|bottom"
				android:layout_marginTop="20dp"
				android:src="@drawable/kill"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="33dp"
				android:layout_marginTop="3dp"
				android:gravity="center|top"
				android:text="+1 KILL"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.15"
			android:orientation="vertical">

			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_gravity="center|bottom"
				android:layout_marginTop="20dp"
				android:src="@drawable/death"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="33dp"
				android:layout_marginTop="3dp"
				android:gravity="center|top"
				android:text="+1 DEATH"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.16"
			android:orientation="vertical">

			<TextView
				android:id="@+id/kills"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="05"
				android:textColor="@color/textPrimary"
				android:textSize="40dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="27dp"
				android:gravity="center|top"
				android:text="KILLS"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.08"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="28dp"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="/"
				android:textColor="@color/textSecondary"
				android:textSize="40dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.16"
			android:orientation="vertical">

			<TextView
				android:id="@+id/deaths"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|bottom"
				android:text="06"
				android:textColor="@color/textPrimary"
				android:textSize="40dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="27dp"
				android:gravity="center|top"
				android:text="DEATHS"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.15"
			android:orientation="vertical">

			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_gravity="center|bottom"
				android:layout_marginTop="20dp"
				android:src="@drawable/team"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="33dp"
				android:layout_marginTop="3dp"
				android:gravity="center|top"
				android:text="TEAM"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.15"
			android:orientation="vertical">

			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_gravity="center|bottom"
				android:layout_marginTop="20dp"
				android:src="@drawable/global"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="33dp"
				android:layout_marginTop="3dp"
				android:gravity="center|top"
				android:text="PUBLIC"
				android:textColor="@color/textSecondary"
				android:textSize="11dp"
				android:textStyle="bold"/>
		</LinearLayout>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/openMap"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:layout_weight="0.17"
			android:gravity="center"
			android:text="OPEN\nMAP"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			android:textColor="@color/textPrimary"/>

		<TextView
			android:id="@+id/attack"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:layout_weight="0.17"
			android:gravity="center"
			android:text="ATTACK"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			android:textColor="@color/textPrimary"/>

		<TextView
			android:id="@+id/defend"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:layout_weight="0.17"
			android:gravity="center"
			android:text="DEFEND"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			android:textColor="@color/textPrimary"/>

		<TextView
			android:id="@+id/ammo"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:layout_weight="0.17"
			android:gravity="center"
			android:text="NEED AMMO"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			android:textColor="@color/textPrimary"/>

		<TextView
			android:id="@+id/enemyDown"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:layout_weight="0.17"
			android:gravity="center"
			android:text="ENEMY DOWN"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			android:textColor="@color/textPrimary"/>

		<TextView
			android:id="@+id/teammateDown"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:layout_weight="0.17"
			android:gravity="center"
			android:text="TEAMMATE DOWN"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			android:textColor="@color/textPrimary"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="Sample notification"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/textPrimary"
			android:textStyle="bold"/>
	</LinearLayout>
</LinearLayout>